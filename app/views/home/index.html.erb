<h1>Anúncios</h1>

<table>
    <thead>
        <tr>
            <th>Titulo</th>
            <th>Descrição </th>
            <th>Preço</th>
            <th colspan="3"></th>
        </tr>
    </thead>

    <tbody>
        <% @ads.each do |ad| %>
            <tr>
                <td><%= ad.title %></td>
                 <td><%= ad.description %></td>
                <td><%= ad.price %></td>
               
                <td><%= link_to ' Visualizar ', ad_path(ad),  class: 'btn btn-secondary '  %></td>
                <td><%= link_to ' Alterar ', edit_ad_path(ad), class: 'btn btn-success ' %></td>
                <td><%= link_to ' Excluir ', ad, method: :delete, data: { confirm: "Are you sure?" }, class: 'btn btn-danger ' %> </td>
                
            </tr>
        <% end %>
    </tbody>
</table>